generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Control {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
}

enum UserType {
  ADMIN
  USER
}

model User {
  id          Int      @id @default(autoincrement())
  email       String?   @unique
  rut         String   @unique 
  name        String
  secondName  String
  lastName    String
  surName     String
  controles   Control[]
  type        UserType
  password    String
}

enum RouteType {
  ADMIN
  USER
}

model Routes {
  id      Int     @id @default(autoincrement())
  path    String  
  type    RouteType
  title   String
}

